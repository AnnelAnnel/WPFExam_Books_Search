<UserControl x:Class="SoulMelody.StartingUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoulMelody"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <!--<Grid x:Name="startGrid"></Grid>-->

        <Grid.RowDefinitions>

            <RowDefinition Height="180"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Source="study.png" Width="100" Margin="0,20,0,0"></Image>

        <StackPanel Grid.Row="1">
            <Button x:Name="LoginBtn" Height="30" Width="150" Content="Login" Margin="0,60,0,20" Click="LoginBtn_Click"></Button>
            <!--<Button x:Name="RegisterBtn" Height="30" Width="150" Content="Register" Margin="0,0,0,20" Click="RegisterBtn_Click"></Button>-->
            <!--<Button x:Name="FaceIdBtn" Height="30" Width="150" Content="FaceID" Margin="0,0,0,20" Click="FaceIdBtn_Click"></Button>-->
            <Button x:Name="ExitBtn" Height="30" Width="150" Content="Exit" Click="ExitBtn_Click"></Button>
        </StackPanel>
    
    </Grid>
</UserControl>
